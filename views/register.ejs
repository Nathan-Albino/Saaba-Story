<h3>Register</h3>
<div class="divider"></div>
<div class="row register-form">
  <form action="/user/register" method="POST" class="col s12">
    <div class="row">
      <div class="input-field col s6">
        <input
          placeholder="Enter Username"
          id="username"
          type="text"
          name="username"
          class="validate"
          value="<%=locals.username%>"
        />
        <label for="first_name">User name</label>
      </div>
      <div class="input-field col s6">
        <input
          placeholder="Enter Password"
          id="password"
          type="password"
          name="password"
          class="validate"
          value="<%=locals.password%>"
        />
        <label for="password">Password</label>
      </div>

      <%- include("./partials/errorMessage.ejs") %>

      <button class="btn red darken-1" type="submit">Register</button>
      <a href="/" class="btn">Back</a>
    </div>
  </form>
</div>

<div class="row">
  <form class="col s12" method="POST" action="/storyboard/edit/:id?_method=PUT">
    <h3>Edit your Story</h3>
    <div class="row">
      <div class="input-field col s6">
        <input
          id="input_text"
          type="text"
          name="title"
          data-length="10"
          maxlength="50"
          value= "<%= story.title %>"
        />
        <label for="input_text">Title</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">

        <% if (story.status == "Public") { %>
            <select name="status">
                <option value="Public" selected>Public</option>
                <option value="Private">Private</option>
            </select>
        <label>Status</label>
        <% } else { %>
            <select name="status">
                <option value="Public">Public</option>
                <option value="Private" selected>Private</option>
            </select>
        <% } %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <h5>Share your Story:</h5>
        <textarea
          id="textarea2"
          class="materialize-textarea"
          data-length="120"
          name="body"
        ><%=locals.truncateBody(story.body)%></textarea>
      </div>
    </div>
    <div class="row">
      <div class="col s1">
        <button class="btn" type="Submit">Submit</button>
      </div>
    </div>
  </form>
</div>
